<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nl.saxion.ap.drink.QuestActivity"
    tools:showIn="@layout/activity_quest">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="STREAK!"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/winnerNameQuestView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Je naam"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/returnToGameAcButtonQuest"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="MAG EEN OPDRACHT VERZINNEN!"
        android:textSize="30sp" />

    <Button
        android:id="@+id/returnToGameAcButtonQuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Terug naar spel"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/nextCardQuestActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/winnerNameQuestView"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/harten_2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Next card is:" />
</RelativeLayout>
